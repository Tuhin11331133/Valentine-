    <button id="no">No ğŸ’”</button>
  </div>

  <script>
    const noBtn = document.getElementById("no");
    const container = document.querySelector(".buttons");

    function moveNoButton() {
      const maxX = container.clientWidth - noBtn.offsetWidth;
      const maxY = container.clientHeight - noBtn.offsetHeight;

      noBtn.style.left = Math.random() * maxX + "px";
      noBtn.style.top = Math.random() * maxY + "px";
    }

    noBtn.addEventListener("mouseenter", moveNoButton);
    noBtn.addEventListener("touchstart", moveNoButton);

    function yesClicked() {
      launchConfetti();

      setTimeout(() => {
        document.body.innerHTML = `
          <h1>ğŸ¥° I love you so much fluff ball â¤ï¸</h1>
          <p style="font-size: 24px; color: white;">
            Happy Valentineâ€™s Day, Ahona ğŸ’–
          </p>
        `;
      }, 800);
    }

    function launchConfetti() {
      for (let i = 0; i < 120; i++) {
        const confetti = document.createElement("div");
        confetti.className = "confetti";
        confetti.style.backgroundColor =
          ["#ff4757", "#1e90ff", "#2ed573", "#ffa502", "#ff6b81"][
            Math.floor(Math.random() * 5)
          ];

        const x = (Math.random() - 0.5) * 600 + "px";
        const y = (Math.random() - 0.5) * 600 + "px";

        confetti.style.setProperty("--x", x);
        confetti.style.setProperty("--y", y);

        confetti.style.left = "50%";
        confetti.style.top = "50%";

        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 1200);
      }
    }
  </script>

